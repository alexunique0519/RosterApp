<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main_layout"
    android:textAlignment="textStart"
    android:focusable="true"
    android:layoutMode="clipBounds"
    android:transitionGroup="true"
    android:touchscreenBlocksFocus="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Roster"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:textSize="15dp"
        android:id="@+id/editText_name"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Thinks We Are Going Steady"
        android:id="@+id/checkBox"
        android:layout_below="@+id/editText_name"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_marginTop="5dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/checkBox"
        android:layout_alignEnd="@+id/button_setBirthday"
        android:layout_marginTop="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView2"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Birthday"
        android:textSize="15dp"
        android:id="@+id/textView_birthday"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="4dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/textView_birthday"
        android:layout_alignEnd="@+id/button_setBirthday"
        android:layout_marginTop="2dp" />

    <Spinner
        android:layout_width="fill_parent"
        android:textColor = "#808080"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_eyeColor"
        android:layout_alignStart="@+id/textView"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignTop="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Eye Color"
        android:textSize="15dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView_birthday"
        android:layout_alignStart="@+id/textView_birthday"
        android:layout_marginTop="15dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/button_setBirthday"
        android:layout_marginTop="2dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/radiogroup_1"
        android:layoutMode="clipBounds"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XS"
            android:textSize="15dp"
            android:id="@+id/radioButton_xs"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:textSize="15dp"
            android:id="@+id/radioButton_s"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:textSize="15dp"
            android:id="@+id/radioButton_m"
            android:checked="false"
            android:layout_weight="0.05" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L"
            android:textSize="15dp"
            android:id="@+id/radioButton_l"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XL"
            android:id="@+id/radioButton_xl"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXL"
            android:textSize="15dp"
            android:id="@+id/radioButton_xxl"
            android:checked="false" />

    </RadioGroup>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Shirt Size"
        android:textSize="15dp"
        android:id="@+id/textView4"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/spinner_eyeColor" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/radiogroup_1"
        android:layout_alignEnd="@+id/button_setBirthday"
        android:layout_marginTop="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pant Size"
        android:textSize="15dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/radiogroup_1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar_pantSize"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:max="16"
        android:layout_toStartOf="@+id/button_setBirthday" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Shirt Size"
        android:textSize="15dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/seekBar_pantSize"
        android:layout_alignEnd="@+id/textView3" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar_shirtSize"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:max="12"
        android:layout_toStartOf="@+id/textView_pantsSize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Shoe Size"
        android:textSize="15dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/seekBar_shirtSize"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar_shoeSize"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:max="8"
        android:layout_toStartOf="@+id/textView_shirtSize" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button_submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onSave"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Set"
        android:id="@+id/button_setBirthday"
        android:padding="0dp"
        android:layout_alignBottom="@+id/textView_birthday"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView_pantsSize"
        android:layout_above="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/seekBar_pantSize"
        android:layout_below="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView_shirtSize"
        android:layout_above="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/seekBar_shirtSize"
        android:layout_toEndOf="@+id/seekBar_shirtSize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView_shoeSize"
        android:layout_alignBottom="@+id/seekBar_shoeSize"
        android:layout_alignEnd="@+id/textView_shirtSize"
        android:layout_toEndOf="@+id/seekBar_shoeSize"
        android:layout_below="@+id/textView7" />


</RelativeLayout>
